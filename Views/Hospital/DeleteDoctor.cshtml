@model HealthcareSystem.Models.Doctor
@{
    ViewData["Title"] = "Delete Doctor";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title text-center">Delete Doctor</h1>
                    <hr />
                    <div class="alert alert-danger">
                        <h4>Are you sure you want to delete this doctor?</h4>
                        <p>This action cannot be undone.</p>
                    </div>
                    <dl class="row">
                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>
                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Speciality)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Speciality)</dd>
                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.AcademicQualification)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.AcademicQualification)</dd>
                    </dl>
                    <form asp-action="DeleteDoctor">
                        <input type="hidden" asp-for="DoctorId" />
                        <div class="text-center">
                            <button type="submit" class="btn btn-danger">Delete</button>
                            <a asp-action="Doctors" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 