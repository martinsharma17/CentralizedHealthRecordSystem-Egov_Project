@{
    ViewData["Title"] = "Patients";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Patients</h2>
        <a asp-action="CreatePatient" class="btn btn-primary">Add New Patient</a>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Search Patient</h5>
                    <form asp-action="SearchPatient" method="post">
                        <div class="input-group">
                            <input type="text" name="citizenshipNumber" class="form-control" placeholder="Enter Citizenship Number" required>
                            <button type="submit" class="btn btn-primary">Search</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 